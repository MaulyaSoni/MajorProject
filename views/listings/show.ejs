<%- layout('/layouts/boilerplate')%>

<body>
    <div class="row mt-3">
        <div class="col-8 offset-4">
             <h3>Listing Details :</h3> 
    <div class="card col-6 offset-0">
         
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing image" />
        
        <div class="card-body">
            <b><p class="card-text"><%= listing.title%> </p></b>
            <strong>ID:</strong> <%= listing._id %><br>
            <%= listing.description %><br>
            &#8377; <%= listing.price %><br>
            <%= listing.location %><br>
            <%= listing.country %><br>
        </div>
    </div>
    <div class="btns">
        <a href="/listings/<%= listing._id %>/edit" class="edit-btn">Edit</a>
        <form method="POST" action="/listings/<%= listing._id%>?_method=DELETE" style="display:inline;">
            <button class="btn btn-dark offset-1">Delete</button>
        </form>
    </div>
    </div>
    </div>    
</body>